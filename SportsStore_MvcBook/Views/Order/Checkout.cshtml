@model Order

<h2>Оформление заказа</h2>
<p>Пожалуйста, заполните поля, необходимые для доставки заказа</p>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Checkout" method="post">
    <h3>Получатель</h3>
    <div class="form-group">
        <label>Name:</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <h3>Адрес доставки</h3>
    <div class="form-group">
        <label>Строка 1:</label>
        <input asp-for="Line1" class="form-control" />
    </div>
    <div class="form-group">
        <label>Строка 2:</label>
        <input asp-for="Line2" class="form-control" />
    </div>
    <div class="form-group">
        <label>Строка 3:</label>
        <input asp-for="Line3" class="form-control" />
    </div>
    <div class="form-group">
        <label>Город:</label>
        <input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label>Область:</label>
        <input asp-for="Area" class="form-control" />
    </div>
    <div class="form-group">
        <label>Индекс:</label>
        <input asp-for="Zip" class="form-control" />
    </div>
    <div class="form-group">
        <label>Страна:</label>
        <input asp-for="Country" class="form-control" />
    </div>
    <h3>Дополнительно</h3>
    <div class="custom-checkbox">
        <label>
            <input asp-for="GiftWrap" />Подарочная упаковка
        </label>
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Complete Order" />
    </div>
</form>